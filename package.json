        "hardhat-preprocessor": "^0.1.5",
        "keccak256": "^1.0.6",
        "solc": "0.7.5",
        "ts-generator": "^0.1.1",
        "ts-node": "^10.8.0",
        "tsc": "^2.0.3",
        "typechain": "8.1.1",
        "typescript": "^4.1.3"
    }
