{
    "name": "@bulla-network/factoring-contract",
    "version": "2.0.0",
    "license": "BUSL-1.1",
    "files": [
        "contracts/interfaces",
        "artifacts/contracts/**/*.json",
        "!artifacts/contracts/**/*.dbg.json",
        "typechain-types"
    ],
    "scripts": {
        "compile": "npx hardhat compile && npx tsc --project tsconfig.json",
        "build": "npm run compile",
        "test": "npx hardhat test",
        "run-node": "npx hardhat node --fork https://rpc.xdaichain.com",
        "dev": "npx hardhat node",
        "deploy": "dotenv -e .env -- npx ts-node scripts/deploy-bullaFactoring.ts",
        "deploy:adapter": "dotenv -e .env -- npx ts-node scripts/deploy-adapter.ts",
        "deploy:full": "dotenv -e .env -- npx ts-node scripts/full-deploy-flow.ts",
        "verify": "dotenv -e .env -- npx ts-node scripts/verify-all-contracts.ts",
        "set-impair-reserve": "dotenv -e .env -- npx ts-node scripts/set-impair-reserve.ts",
        "whitelist-callback": "dotenv -e .env -- npx ts-node scripts/whitelist-callback.ts"
    },
    "dependencies": {
        "@aragon/osx-commons-contracts": "^1.4.0-alpha.3",
        "@bulla/contracts-v2": "^2.6.0",
        "@gnosis.pm/safe-contracts": "^1.3.0",
        "@gnosis.pm/zodiac": "^1.0.3",
        "@types/node": "^16.9.1",
        "ethers": "^5.4.2"
    },
    "devDependencies": {
        "@bulla-network/contracts": "0.0.11-beta-0.3",
        "@ethersproject/abi": "5.7.0",
        "@ethersproject/bytes": "5.7.0",
        "@ethersproject/providers": "5.7.0",
        "@noble/secp256k1": "^1.5.5",
        "@nomicfoundation/hardhat-verify": "^3.0.4",
        "@nomiclabs/hardhat-ethers": "2.1.0",
        "@nomiclabs/hardhat-solhint": "^2.0.0",
        "@nomiclabs/hardhat-waffle": "^2.0.1",
        "@openzeppelin/contracts": "^5.3.0",
        "@typechain/ethers-v5": "9.0.0",
        "@typechain/hardhat": "6.1.4",
        "@types/bs58": "^4.0.1",
        "@types/mocha": "^8.2.0",
        "bs58": "^4.0.1",
        "chai": "^4.2.0",
        "cross-env": "^7.0.3",
        "dotenv-cli": "^8.0.0",
        "ethereum-waffle": "^3.4.0",
        "fast-check": "^2.22.0",
        "hardhat": "^2.12.6",
